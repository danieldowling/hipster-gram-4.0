<div id="new-post-controller">

	<h1 class="h1">Add a Post Here!</h1>

	<%= form_for @post do |f| %>

		<div class="new">


			<p>Add an image bro:</p><% f.label :image_url %>
			<%= f.file_field :image_url %>
			
		<br>
		<br>

			<p>Tell us about it if you want:</p><% f.label :description %>
			<%= f.text_field :description %>
		
		<br>
		<br>


		<button><%= f.submit "Add Post" %></button>

		<button><%= link_to "Back to Home Page", users_path %></button>

		</div>

	<% end %>


</div> <!-- end new-post-controller -->