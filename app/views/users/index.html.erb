<h1>Main Page</h1>

<% if logged_in? %>
  Logged in as: <%= current_user.first_name %> <%= current_user.last_name %> <%= link_to 'Log Out', logout_path, method: :delete %>
<% else %>
  <%= link_to 'Log In', login_path %>
<% end %>

<br>
<br>

<% @users.each do |user| %>

	<li>
		<%= image_tag user.image_url %> <%= user.first_name %> <%= user.last_name %>
    <br>
    <%= link_to 'View Profile', user_path(user) %>

	</li>

<% end %>


